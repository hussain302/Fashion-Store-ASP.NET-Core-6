@model ProductModel
@{
    ViewData["Title"] = "Edit Product";
}

<div class="card p-3">
    <div class="jumbotron mt-5">
        <h1 class="display-3">@ViewData["Title"] <i class="fa fa-cogs"></i></h1>
        <div class="mt-4">
            <a asp-action="Manage" class="btn-outline-primary btn" asp-controller="Product" asp-route-id="">Back to Manage <i class="fa fa-arrow-left"></i></a>
        </div>
    </div>

    <div class="mt-5">
        @using (Html.BeginForm("Edit", "Product", FormMethod.Post, new { @id = "ProductForm", enctype = "multipart/form-data" }))
        {
                   <input asp-for="Id" hidden="hidden" />
                   <div>
                    <label>Product Title</label>
                    <div class="mt-3">
                    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
                    </div>
                </div>
                <br />
                <div>
                    <label>Image</label>
                    <div class="mt-1">
                        <input type="file" asp-for="PhotoFile" class="form-control" />
                    </div>
                </div>
                <div class="row">       
                    <div class="col-4">
                        <label>Fabric</label>
                        <div class="mt-3">
                             @Html.TextBoxFor(model => model.Fabric, new {@class="form-control"})
                        </div>
                    </div>
                    <div class="col-4">
                        <label>Category</label>
                        <div class="mt-3">
                            <select asp-for="CategoryId" class="form-control">
                                <option value=''> - Select Category - </option>
                                @foreach (var item in ViewBag.Category)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }    
                            </select>

                        </div>
                    </div>
                    <div class="col-4">
                        <label>Product Type</label>
                        <div class="mt-3">
                            <select asp-for="TypeId" class="form-control">
                                <option value=''> - Select Type - </option>
                                @foreach (var item in ViewBag.Type)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }    
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label>Price</label>
                        <div class="mt-3">
                        @Html.TextBoxFor(model => model.Price,new {@class="form-control"})
                        </div>
                    </div>
                    <div class="col">
                        <label>Quantity</label>
                        <div class="mt-3">
                        @Html.TextBoxFor(model => model.Quantity,new {@class="form-control"})
                        </div>
                    </div>
                </div>

                <div class="row">
                <div  class="mt-3 col">
                    <label>Created By</label>
                    <div class="mt-3">
                            @Html.TextBoxFor(model => model.CreatedBy, new {@class="form-control"})
                    </div>
                </div>              
                 <div  class="mt-3 col">
                    <label>Updated By</label>
                    <div class="mt-3">
                            @Html.TextBoxFor(model => model.UpdatedBy, new {@class="form-control"})
                    </div>
                </div>              
                </div>
                <div>
                      <label>Description</label>
                        <div class="mt-3">
                            <textarea class="form-control" asp-for="Description" rows="2">
                            </textarea>
                        </div>
                    </div>

                <br />
                <button class="btn-outline-success btn" type="submit">Update</button>
        }
    </div>
</div>
