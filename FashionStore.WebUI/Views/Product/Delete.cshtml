@model ProductModel
@{
    ViewData["Title"] = "Delete Product";
}

<div class="card p-3">
    <div class="jumbotron mt-5">
        <h1 class="display-3">@ViewData["Title"] <i class="fa fa-cogs"></i></h1>
        <div class="mt-4">
            <a asp-action="Manage" class="btn-outline-primary btn" asp-controller="Product" asp-route-id="">Back to Manage <i class="fa fa-arrow-left"></i></a>
        </div>
    </div>
    <br /><br />
    <div>
        <h1 class="display-5">Are you sure to delete @Model.Name?</h1>
    </div>
    <div class="row mt-3">
        <div class="col-3">
            <h5> Product Title </h5>
        </div>
        <div class="col-9">
            <p> @Model.Name</p>
        </div>
    </div>
    @if (Model.Fabric != null)
    {
        <div class="row">
            <div class="col-3">
            <h5> Fabric </h5>
        </div>
        <div class="col-9">
            <p> @Model.Fabric</p>
        </div>
    </div>
    }
    <div class="row mt-3">
        <div class="col-3">
            <h5> Category </h5>
        </div>
        <div class="col-9">
            <p> @Model.ProductCategory.Name  </p>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-3">
            <h5> Type </h5>
        </div>
        <div class="col-9">
            <p> @Model.ProductType.Name  </p>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-3">
            <h5>Description</h5>
        </div>
        <div class="col-9">
            <p> @Model.Description  </p>
        </div>
    </div>
    <div class="mt-5">
        @using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { @id = "ProductForm", enctype = "multipart/form-data" }))
        {
             <input  hidden="hidden" asp-for="Id" />
          
            <button class="btn-outline-danger btn" type="submit">Delete</button>
        }
    </div>
</div>
