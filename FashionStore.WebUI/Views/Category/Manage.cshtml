@model IEnumerable<ProductCategoryModel>

@{
    ViewData["Title"] = "Manage Category";
}

<div class="card p-3">
    <div class="jumbotron mt-5">
        <h1 class="display-3">@ViewData["Title"] <i class="fa fa-cogs"></i></h1>
        <div class="mt-4">
            <a asp-action="Create" class="btn-outline-primary btn" asp-controller="Category">Add Category <i class="fa fa-plus"></i></a>
        </div>
    </div>

    <div class="mt-5">
        <table class="table table-hover">
            <thead>
                <tr>
                   <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th>Updated By</th>
                    <th>Updated At</th>
                    <th>Actions</th>
                </tr>                
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                 <tr>
                    <th>@cat.Id</th>
                    <td>@cat.Name</td>
                    <td>@cat.Description</td>
                    <td>@cat.CreatedBy</td>
                    <td>@cat.CreatedAt</td>
                    <td>@cat.UpdatedBy</td>
                    <td>@cat.UpdatedAt</td>
                    <td>
                        <a asp-action="Edit" class="btn-outline-warning btn" asp-controller="Category" asp-route-id="@cat.Id"><i class="fa fa-edit"></i></a>
                        <a asp-action="Delete" class="btn-outline-danger btn" asp-controller="Category" asp-route-id="@cat.Id"><i class="fa fa-trash"></i></a>
                    </td>
                </tr>   
                }
            </tbody>
        </table>
    </div>
</div>
