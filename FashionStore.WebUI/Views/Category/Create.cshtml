@model ProductCategoryModel
@{
    ViewData["Title"] = "Create Category";
}

<div class="card p-3">
    <div class="jumbotron mt-5">
        <h1 class="display-3">@ViewData["Title"] <i class="fa fa-cogs"></i></h1>
        <div class="mt-4">
            <a asp-action="Manage" class="btn-outline-primary btn" asp-controller="Category">Back to Manage <i class="fa fa-arrow-left"></i></a>
        </div>
    </div>

    <div class="mt-5">
        @using (Html.BeginForm("Create", "Category", FormMethod.Post, new { @id = "CategoryForm" }))
        {
           <div class="mt-3">
            <label>Catgeory Name</label>
            <div class="mt-1">
                    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
            </div>
        </div>
        <div  class="mt-3">
            <label>Catgeory Details</label>
            <div class="mt-1">
                <textarea rows="3" class="form-control" asp-for="Description" placeholder="Enter Details" >
                </textarea>
            </div>
        </div>
        <div  class="mt-3">
            <label>Created By</label>
            <div class="mt-1">
                    @Html.TextBoxFor(model => model.CreatedBy, new {@class="form-control"})
            </div>
        </div>   
        <br />
        <button class="btn-outline-primary btn" type="submit">Add Category</button>
        }
    </div>
</div>
