@model OrderStatusModel
@{
    ViewData["Title"] = "Create Order Status";
}

<div class="card p-3">
    <div class="jumbotron mt-5">
        <h1 class="display-3">@ViewData["Title"] <i class="fa fa-cogs"></i></h1>
        <div class="mt-4">
            <a asp-action="Manage" class="btn-outline-primary btn" asp-controller="OrderStatus">Back to Manage <i class="fa fa-arrow-left"></i></a>
        </div>
    </div>

    <div class="mt-5">
        @using (Html.BeginForm("Create", "OrderStatus", FormMethod.Post, new { @id = "StatusForm" }))
        {
           <div class="mt-3">
            <label>Name</label>
            <div class="mt-1">
                    @Html.TextBoxFor(model => model.Name, new {@class="form-control"})
            </div>
        </div>
         
        <br />
        <button class="btn-outline-primary btn" type="submit"> Add Status </button>
        }
    </div>
</div>
