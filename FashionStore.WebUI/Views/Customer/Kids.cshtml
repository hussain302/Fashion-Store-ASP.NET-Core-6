@model IEnumerable<ProductModel>
@{
    ViewData["Title"] = "Kids";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<div class="container">
    <div class="text-center card">
        <h1> Kids Collection  <i class="fa fa-men"></i> </h1>
    </div>
    <br /><br />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div class="card" style="width: 18rem;">
                    <img src="@item.ImageModelURL" class="card-img-top" alt="null">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <h4 class="card-text"> Rs:@item.Price\-</h4>
                        <div class="row">
                            <a href="~/Cart/Add/@item.Id" class="col m-1 btn btn-outline-info">Add to Cart <i class="fa fa-shopping-bag"></i></a>
                            <a href="~/Customer/details/@item.Id" class="m-1 col btn btn-outline-danger">Details</a>
                        </div>
                    </div>
                </div>
            </div>
           
        } <br />
    </div>
    
</div>