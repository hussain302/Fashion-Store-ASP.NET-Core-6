<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Fashion Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FashionStore.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-info">
            <div class="container-fluid">
                <a class="navbar-brand" href="#"> Fashion Store </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor03">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="/">
                                Home
                                <span class="visually-hidden">(current)</span>
                            </a>
                        </li>
                    </ul>
                    @if (ViewBag.Name != null)
                    {
                        <form class="d-flex">
                            <a class="btn-warning m-1 btn-sm btn" style="font-size:15px;" asp-controller="User" asp-action="Profile">
                                <svg class="m-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                </svg> @ViewBag.Name
                            </a>
                            <a class="btn-danger m-1 btn-sm btn" style="font-size:15px;" asp-controller="User" asp-action="Logout">
                                Logout
                                <svg class="m-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                                    <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                                </svg>
                            </a>
                        </form>
                    }
                    else
                    {
                        <form class="d-flex">
                            <a class="btn-primary m-1 btn-sm btn" style="font-size:15px;" asp-controller="User" asp-action="Login">
                                <svg class="m-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                </svg> Login
                            </a>
                            <a class="btn-danger m-1 btn-sm btn" style="font-size:15px;" asp-controller="User" asp-action="Logout">
                                Logout
                                <svg class="m-1" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                    <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                                    <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                                </svg>
                            </a>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-3 col-lg-3 col-md-4 col-sm-5 col-xs-5">
                    <div class="list-group">
                        <a class="list-group-item list-group-item-action">
                            <div class="card text-white bg-primary mb-3" style="max-width: auto;">
                                <div class="card-header">Admin</div>
                                <div class="card-body">
                                    <h4 class="card-title">Muhammad Hussain</h4>
                                </div>
                            </div>
                        </a>
                        <a href="~/Home/Index" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Dashboard</a>
                        <a href="~/User/Manage" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Users</a>
                        <a href="~/Product/Manage" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Products <i class="fa fa-check-square-o"></i></a>
                        <a href="~/Category/Manage" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Product Categories</a>
                        <a href="~/Type/Manage" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Product Types</a>
                        <a href="~/Order/Manage" class="list-group-item list-group-item-action " style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Orders <i class="fa fa-shopping-cart"></i> </a>
                        <a href="~/OrderStatus/Manage" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Order Status</a>
                        <a href="~/Setting/Manage" class="list-group-item list-group-item-action" style="font-size:20px;"><i class="fa fa-arrow-right" aria-hidden="true"></i> Settings <i class="fa fa-cogs"></i></a>
                    </div>
                </div>
                <div class="col-9 col-lg-9 col-md-8 col-sm-7 col-xs-7">
                    @RenderBody()
                </div>
            </div>
        </main>
    </div>

    <section class="">
        <footer class="bg-info fixed-bottom text-white text-center text-md-start">
            <div class="text-center p-3">
                © @DateTime.Now.ToString("MM/dd/yyyy") Copyright:
                <a class="text-white" href="#">CodeHub.NET</a>
            </div>
        </footer>
    </section>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
