@model IEnumerable<UserModel>

<div class="card p-3">
    <div class="jumbotron mt-5">
        <h1 class="display-3">@ViewData["Title"] <i class="fa fa-cogs"></i></h1>
        <div class="mt-4">
            <a asp-action="Create" class="btn-outline-primary btn" asp-controller="Category">Add Category <i class="fa fa-plus"></i></a>
        </div>
    </div>

    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Role</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <th>@user.Role.Name</th>
                        <td>@user.FirstName @user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.IsActive</td>
                        <td>
                            <a class="btn btn-danger" asp-action="Delete"
                                asp-controller="User" asp-route-id="@user.Id">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>