@model UserModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_MinimalLayout.cshtml";
}

<div class="container p-3">
    <div class="mt-5 text-center">
        <h1 class="display-3">@ViewData["Title"] </h1>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="mt-3 alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong>User not found!</strong> @ViewBag.ErrorMessage
        </div>
    }

    <div class="mt-5">
        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @id = "LoginForm" }))
        {
            <div class="mt-3">
                <label>Email Address</label>
                <div class="mt-1">
                    @Html.TextBoxFor(model => model.Email, new {@class="form-control"})
                </div>
            </div>
            <div class="mt-3">
                <label>Password</label>
                <div class="mt-1">
                    @Html.TextBoxFor(model => model.Password, new {@class="form-control" , type="password"})
                </div>
            </div>
            <br />
            <div class="mt-2">
                <button class="btn-outline-primary btn" type="submit">Login</button> | <small class="text-dark"> Don't Have an account? <a class="text-primary" href="~/User/Signup"> Click here</a> </small>
            </div>
        }
    </div>
</div>